" keybind.vim

let mapleader= "\<Space>"

nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
nnoremap <C-h> <C-w>h

tnoremap <C-j> <C-w>j
tnoremap <C-k> <C-w>k
tnoremap <C-l> <C-w>l
tnoremap <C-h> <C-w>h
tnoremap <C-n> <C-w>N

noremap j gj
noremap k gk

" push Esc two times, stop hlsearch
nnoremap <Esc><Esc> :nohlsearch<CR><Esc>

